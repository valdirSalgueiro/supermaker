// Called on continue/restart.
//
// DB = 0x7e
#[mem8, idx8]
inline func gamestate__continue_game__inline() {
    // Reset to starting position from game_config.json
    dungeon.roomToLoad.dungeon = a = game_config.STARTING_DUNGEON_ID;
    dungeon.roomToLoad.room_x = a = game_config.STARTING_ROOM_X;
    dungeon.roomToLoad.room_y = a = game_config.STARTING_ROOM_Y;
    dungeon.roomToLoad.player_x_lo = a = game_config.STARTING_PIXEL_X;
    dungeon.roomToLoad.player_x_hi = a = 0;
    dungeon.roomToLoad.player_y_lo = a = game_config.STARTING_PIXEL_Y;
    dungeon.roomToLoad.player_y_hi = a = 0;

    player.continue_player_gamestate__inline();
}



