// WaitFrame
// =========


// Vertical blank hook.
//
// Called by `wait_frame()`.
//
// MUST NOT modify zpTmp variables.
//
// DB = 0x80
#[mem8, idx16]
inline func wait_frame__vblank__inline() {
    // ui.transfer_buffer__vblank();

    // Flush queued player dynamic tile DMAs (queue was built before wait_frame)
    idx8();
    #[idx8] {
        metasprites.dynamic_tiles.flush_dynamic_tiles__vblank__inline();
        
        // Process map system column buffer (handles both BG1 and BG2)
        map_system.process_vblank();
    }
    idx16();
    
    // Shadow system VBlank transfer
    // shadows.transfer_to_vram__vblank();
}



// After Vertical-Blank hook.
//
// Called by `wait_frame()`, after the screen is re-enabled.
//
// MUST NOT modify zpTmp variables.
//
// DB = 0x80
#[mem16, idx16]
inline func wait_frame__after_vblank__mem16_idx16__inline() {
    rng.increment_rng();
}



// After Vertical-Blank hook.
//
// Called by `wait_frame()`, after the screen is re-enabled.
//
// MUST NOT modify zpTmp variables.
//
// DB = 0x80
#[mem8, idx8]
inline func wait_frame__after_vblank__mem8_idx8__inline() {
    joypad.update_state__inline();
}


